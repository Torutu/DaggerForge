{
	"name": "daggerforge",
	"version": "1.0.1",
	"description": "A DaggerHeart toolkit for Obsidian, providing easy access to DaggerHeart's Adversaries and the ability to create your own.",
	"type": "module",
	"main": "main.js",
	"scripts": {
		"dev": "node esbuild.config.mjs",
		"build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
		"version": "node version-bump.mjs && git add manifest.json versions.json",
		"watch": "esbuild src/main.ts --bundle --outfile=main.js --external:obsidian --platform=node --format=cjs --minify-syntax --minify-whitespace --watch"
	},
	"keywords": [
		"obsidian",
		"daggerheart",
		"ttrpg",
		"adversary-cards",
		"battle-tracker",
		"daggerforge"
	],
	"author": "Waleed Alnaimi",
	"license": "MIT",
	"devDependencies": {
		"@types/node": "^16.11.6",
		"@typescript-eslint/eslint-plugin": "^5.29.0",
		"@typescript-eslint/parser": "^5.29.0",
		"builtin-modules": "3.3.0",
		"esbuild": "^0.25.6",
		"eslint": "^8.57.1",
		"eslint-plugin-obsidianmd": "^0.1.4",
		"obsidian": "latest",
		"prettier": "^3.6.2",
		"tslib": "2.4.0",
		"typescript": "^5.8.3"
	},
	"dependencies": {
		"html2canvas": "^1.4.1"
	}
}
